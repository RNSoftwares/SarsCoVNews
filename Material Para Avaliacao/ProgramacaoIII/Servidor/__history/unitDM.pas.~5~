unit unitDM;

interface

uses
  System.SysUtils, System.Classes, uDWDataModule, FireDAC.Phys.PGDef,
  FireDAC.Stan.Intf, FireDAC.Stan.Option, FireDAC.Stan.Error, FireDAC.UI.Intf,
  FireDAC.Phys.Intf, FireDAC.Stan.Def, FireDAC.Stan.Pool, FireDAC.Stan.Async,
  FireDAC.Phys, FireDAC.Phys.PG, FireDAC.FMXUI.Wait, Data.DB,
  FireDAC.Comp.Client, uDWJSONObject, uDWAbout, uRESTDWServerEvents;

type
  TDM = class(TServerMethodDataModule)
    FDPhysPgDriverLink1: TFDPhysPgDriverLink;
    FDConnection: TFDConnection;
    DWSEvents: TDWServerEvents;
    procedure DWSEventsEventsValidarLoginReplyEvent(var Params: TDWParams;
      var Result: string);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  DM: TDM;

implementation

{%CLASSGROUP 'FMX.Controls.TControl'}

{$R *.dfm}

//http://localhost:8080/ValidarLogin?login=xxxxx
procedure TDM.DWSEventsEventsValidarLoginReplyEvent(var Params: TDWParams;
  var Result: string);
begin
  if(Params.ItemsString['login'].AsString='Otilia')then
    Result := '{"retorno":"ok"}'
  else
    Result := '{"retorno":"Usuario inválido"}';

end;

end.
